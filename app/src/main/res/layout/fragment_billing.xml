    <android.support.percent.PercentRelativeLayout
        android:id="@+id/prl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv_bill_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="Billing Info"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_below="@+id/tv_bill_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="Name"
            android:textSize="14sp"
            android:textColor="@color/textBlackSolid" />

        <EditText
            android:id="@+id/et_customer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            android:layout_below="@+id/tv_customer_name"
            android:layout_marginBottom="5dp"
            android:paddingTop="7dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp"
            android:textColor="@color/textBlack"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="James Bond"
            android:maxLength="19" />

        <TextView
            android:id="@+id/tv_contact_no"
            android:layout_below="@id/et_customer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="Contact Number"
            android:textSize="14sp"
            android:textColor="@color/textBlackSolid" />

        <EditText
            android:id="@+id/et_contact_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            android:layout_below="@+id/tv_contact_no"
            android:layout_marginBottom="5dp"
            android:paddingTop="7dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp"
            android:textColor="@color/textBlack"
            android:background="@color/white"
            android:inputType="phone"
            android:hint="+6564843496"
            android:maxLength="19" />


        <TextView
            android:id="@+id/tv_country"
            android:layout_below="@id/et_contact_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="49.5%"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="Country"
            android:textSize="14sp"
            android:textColor="@color/textBlackSolid" />

        <EditText
            android:id="@+id/et_country"
            android:layout_below="@+id/tv_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="49.5%"
            android:layout_marginBottom="5dp"
            android:paddingTop="7dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp"
            android:textColor="@color/textBlack"
            android:background="@color/white"
            android:inputType="textCapCharacters"
            android:hint="SINGAPORE"
            android:maxLength="20" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_below="@+id/et_contact_no"
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="49.5%"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="State"
            android:textSize="14sp"
            android:textColor="@color/textBlackSolid" />

        <EditText
            android:id="@+id/et_state"
            android:layout_below="@+id/tv_state"
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="49.5%"
            android:layout_marginBottom="5dp"
            android:paddingTop="7dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp"
            android:textColor="@color/textBlack"
            android:background="@color/white"
            android:inputType="textCapCharacters"
            android:hint="SERANGOON"
            android:maxLength="20" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_below="@id/et_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="49.5%"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="City"
            android:textSize="14sp"
            android:textColor="@color/textBlackSolid" />

        <EditText
            android:id="@+id/et_city"
            android:layout_below="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="49.5%"
            android:textColor="@color/textBlack"
            android:background="@color/white"
            android:layout_marginRight="5dp"
            android:paddingTop="7dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp"
            android:inputType="textCapCharacters"
            android:maxLength="5"
            android:hint="SERANGOON" />

        <TextView
            android:id="@+id/tv_zip_add"
            android:layout_below="@id/et_state"
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="49.5%"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="Zip/Postal Code"
            android:textSize="14sp"
            android:textColor="@color/textBlackSolid" />

        <EditText
            android:id="@+id/et_zip"
            android:layout_below="@+id/tv_zip_add"
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="49.5%"
            android:textColor="@color/textBlack"
            android:background="@color/white"
            android:paddingTop="7dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:hint="S554809" />

        <TextView
            android:id="@+id/tv_street_add"
            android:layout_below="@+id/et_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="Street"
            android:textSize="14sp"
            android:textColor="@color/textBlackSolid" />

        <EditText
            android:id="@+id/et_street"
            android:layout_below="@+id/tv_street_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            android:textColor="@color/textBlack"
            android:background="@color/white"
            android:paddingTop="7dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="7dp"
            android:inputType="textCapCharacters"
            android:hint=" #05-03, 11 Serangoon North Ave 5" />

        <CheckBox
            android:id="@+id/cb_same_add"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/et_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Shipping address same as billing address"
            />

        <Button
            android:id="@+id/btn_proceed"
            android:layout_below="@id/cb_same_add"
            android:layout_centerInParent="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="70%"
            android:layout_marginTop="5dp"
            android:theme="@style/BillingTheme"
            android:text="Next" />

        </android.support.percent.PercentRelativeLayout>
</RelativeLayout>